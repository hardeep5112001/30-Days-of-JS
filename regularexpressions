//match()
let str = 'I am Hardeep'
let pattern = /am/g
let result = str.match(pattern)
console.log(result)

//search()
str = 'I am Hardeep'
pattern = /am/g
result = str.search(pattern)
console.log(result)

//Replacing a substring
let txt = 'Python is the most beautiful language that a human being has ever created.\
I recommend python for a first programming language'
matchReplaced = txt.replace(/Python|python/, 'JavaScript')
console.log(matchReplaced)


txt = 'Python is the most beautiful language that a human begin has ever created.\
I recommend python for a first programming language'
matchReplaced = txt.replace(/Python|python/g, 'JavaScript')
console.log(matchReplaced)


txt = 'Python is the most beautiful language that a human begin has ever created.\
I recommend python for a first programming language'
matchReplaced = txt.replace(/Python/gi, 'JavaScript')
console.log(matchReplaced)